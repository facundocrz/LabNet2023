@model Lab.EF.MVC.Models.CategoriesViewModel


@if (Model.ID == 0)
{
    ViewBag.Title = "Agregar categoría";
    <h2>Añadir</h2>
}
else
{
    ViewBag.Title = "Editar categoría";
    <h2>Editar</h2>
}

<div>
    @using (Html.BeginForm("Insert", "Categories", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.ID)
        <div class="form-floating">
            @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", @required = "required", @id = "floatingName", @placeholder = "Nombre de categoría" })
            @Html.LabelFor(m => m.CategoryName, "Nombre de categoría*", new { @for = "floatingName" })
        </div>
        <br />
        <div class="form-floating">
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @id = "floatingDescription", @placeholder = "Descripción" })
            @Html.LabelFor(m => m.Description, "Descripción", new { @for = "floatingDescription" })
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    }
</div>
<br />
<a href="@Url.Action("Index")" class="btn btn-secondary">Volver</a>